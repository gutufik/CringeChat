<Page x:Class="CringeChat.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CringeChat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Username"/>
        <TextBox Grid.Column="1" x:Name="tbName"/>
        <TextBlock Grid.Row="1" Text="Password"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="1" Grid.Column="1"/>
        <CheckBox x:Name="cbRememberMe" 
                      Grid.Column="1" Grid.Row="2"
                      VerticalAlignment="Center" Margin="10" Content="Remember me"/>


        <Button x:Name="btnOk" Grid.Row="3" Content="Ok" Click="btnOk_Click"/>
        <Button x:Name="bnCancel" Grid.Row="3" Grid.Column="1" Content="Cancel" Click="bnCancel_Click"/>

    </Grid>
</Page>
